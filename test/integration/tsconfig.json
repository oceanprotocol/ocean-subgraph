{
    "compilerOptions": {
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "lib": ["es2017", "es6", "es7", "dom"],
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "module": "commonjs",
      "target": "es5",
      "removeComments": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "typeRoots": ["../node_modules/@types"],
      "types": ["...", "@types/mocha"],
    }
  }